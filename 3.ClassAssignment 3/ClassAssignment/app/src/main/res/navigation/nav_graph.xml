<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.alpha.loginsignup.fragments.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.alpha.loginsignup.fragments.SignUpFragment"
        android:label="Sign Up Fragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signup_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_signup_to_verify"
            app:destination="@id/verifyFragment" />
    </fragment>


    <fragment
        android:id="@+id/verifyFragment"
        android:name="com.alpha.loginsignup.fragments.VerifyFragment"
        android:label="Verify Fragment"
        tools:layout="@layout/fragment_verify">
        <action
            android:id="@+id/action_signup_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alpha.loginsignup.fragments.HomeFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_signup_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>